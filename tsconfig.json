{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false
  },
  "files": ["src/index.ts"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
